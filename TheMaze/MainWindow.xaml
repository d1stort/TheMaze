<Window x:Class="TheMaze.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="startButton" Content="Start" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Click="startButton_Clicked"/>
        
        <Button Grid.Row="1" Name="closeButton" Content="Close" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Click="closeButton_Clicked"/>

    </Grid>
</Window>
