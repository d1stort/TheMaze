<Window x:Class="TheMaze.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="startButton" Content="Start" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="200" Click="startButton_Clicked"/>
        <Button Grid.Row="1" Name="statsButton" Content="Scores" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Click="statsButton_Clicked"/>
        <Button Grid.Row="2" Name="closeButton" Content="Close" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Click="closeButton_Clicked"/>

        <DataGrid Visibility="Hidden" Name="scoresTable" HorizontalAlignment="Left" Height="319" Margin="0,0,-3,0" Grid.RowSpan="3" VerticalAlignment="Top" Width="520"/>
        <TextBox Visibility ="Hidden" Name="scoresData" Margin="20,20,20,20" Grid.RowSpan="2"/>
        <Button Visibility="Hidden" Grid.Row="2" x:Name="goBackButton" Content="Go back" FontSize="35" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Click="goBackButton_Clicked"/>

    </Grid>
</Window>
