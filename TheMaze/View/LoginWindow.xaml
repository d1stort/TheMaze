<Window x:Class="TheMaze.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheMaze.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="76.136" Width="284.171">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
        <Label>Nickname</Label>
        <TextBox Width="150" Text="{Binding Player.NickName}" Name="LoginTextBox"></TextBox>
        <Button Width="45" Command="{Binding PlayerUpdateCommand}" Click="PlayButtonLW_Click">Play</Button>
    </StackPanel>
</Window>
