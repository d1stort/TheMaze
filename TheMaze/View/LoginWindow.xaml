<Window x:Class="TheMaze.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheMaze.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="190" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0" >Choose your nickname:</Label>
        <TextBox Grid.Row="1" Margin="5,5,5,5" Text="{Binding GetRegistered}"/>
        <Button Grid.Row="2" Margin="90,10,90,10" Content="Play" Click="PlayButtonLW_Click"/>
    </Grid>
</Window>
