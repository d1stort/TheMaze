<Window x:Class="TheMaze.Level2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Level 2" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Content="Score:" FontSize="16" Grid.Column="0" />
        <Label Content="{Binding Player.Score}" FontSize="16" Grid.Column="1" VerticalAlignment="Top"/>

        <Label Content="Player:" FontSize="16" Grid.Row="1"/>
        <Label Content="{Binding Player.NickName}" FontSize="16" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top"/>

    </Grid>
</Window>
